<%= form_with model: [@worker, @time_entry] do |f| %>
  <div class="container">
    <%= render 'shared/errors', obj: @time_entry %>
    <div class="row">
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <%= f.datetime_field :entry_date, class: "form-control", placeholder: "entry_date" %>
          <%= f.label :entrada %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <%= f.datetime_field :exit_date, class: "form-control", placeholder: "exit_date" %>
          <%= f.label :salida %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit (@time_entry.new_record? ? "Iniciar jornada" : "Modificar" ), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
