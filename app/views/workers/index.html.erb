<h1>Empleados</h1>
<div class="accordion" id="accordionExample">
  <% @departments.each do |department| %>
    <div class="accordion-item">
      <h2 class="accordion-header">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= department.id %>" aria-expanded="false" aria-controls="collapse<%= department.id %>">
          <%= department.name.capitalize %>
        </button>
      </h2>
      <div id="collapse<%= department.id %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <table class="table">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>DNI</th>
                <th>Acciones</th>

              </tr>
            </thead>
            <tbody>
              <% department.workers.each do |worker| %>
                <tr>
                  <td><%= worker.name.capitalize %></td>
                  <td><%= worker.last_name.capitalize %></td>
                  <td><%= worker.dni %></td>
                  <td>
                    <%= link_to worker_path(worker) do %>
                      <i class="bi bi-eye-fill"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
<div class="row my-3 justify-content-center align-items-center">
  <div class="col-2" >
    <%= link_to new_worker_path, class: "btn btn-outline-success" do %>
      <i class="bi bi-person-fill-add display-5"></i>
    <% end %>
  </div>
</div>

