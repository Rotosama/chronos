<%= form_with model: [@worker, @vacation] do |f| %>
  <div class="container">
    <ul>
      <% @vacation.errors.full_messages.each do |message| %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <li><%= message %></li>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </ul>
    <div class="row">
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <%= f.date_field :start_time, class: "form-select", placeholder: "start_time" %>
          <%= f.label :inicio_vacaciones %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-floating mb-3">
          <%= f.date_field :end_time, class: "form-select", placeholder: "end_time" %>
          <%= f.label :fin_de_vacaciones %>
        </div>
      </div>
      <div class="col-md-12"> 
      <div class="form-floating mb-3 text-center">
        <%= f.text_area :description, class: "form-control", style: "height: 200px;" %>
        <%= f.label :Motivo %>
      </div>
    </div>
    <div>
      <%= f.submit %>
    </div>
    </div>
  </div>



<% end %>
